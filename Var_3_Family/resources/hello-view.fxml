            <Button alignment="CENTER" contentDisplay="BOTTOM" prefHeight="23.0" prefWidth="150.0" style="-fx-background-color: #B11AED;" text="Добавить" textFill="#e1dfdf">
                <HBox.margin>
                    <Insets left="50.0" right="50.0" />
                </HBox.margin>
            </Button>
            <Button alignment="CENTER" contentDisplay="BOTTOM" prefHeight="26.0" prefWidth="150.0" style="-fx-background-color: #B11AED;" text="Удалить" textFill="#e1dfdf">
                <HBox.margin>
                    <Insets left="50.0" right="50.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>
